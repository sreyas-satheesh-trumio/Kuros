@page "/signup"
@using Kuros.Web.Services
@inject NavigationManager Navigation

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1>Create Account</h1>
            <p>Join Kuros today</p>
        </div>

        <EditForm Model="@signupModel" OnValidSubmit="@HandleSignUp" class="auth-form">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label for="fullname">Full Name</label>
                <InputText id="fullname" @bind-Value="signupModel.FullName" class="form-control" />
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <InputText id="email" @bind-Value="signupModel.Email" class="form-control" type="email" />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <InputText id="password" @bind-Value="signupModel.Password" class="form-control" type="password" />
            </div>

            <div class="form-group">
                <label for="confirm">Confirm Password</label>
                <InputText id="confirm" @bind-Value="signupModel.ConfirmPassword" class="form-control"
                    type="password" />
            </div>

            <div class="auth-button-group">
                <button type="submit" class="btn btn-primary" disabled="@isLoading" style="width: 100%; padding: 12px;">
                    @if (isLoading)
                    {
                        <span>Creating account...</span>
                    }
                    else
                    {
                        <span>Sign Up</span>
                    }
                </button>
            </div>
        </EditForm>

        <div class="auth-footer">
            <p>Already have an account?
                <a href="/login">Sign in here</a>
            </p>
        </div>
    </div>
</div>



@code {
    private SignupModel signupModel = new();
    private bool isLoading = false;

    private async Task HandleSignUp()
    {
        if (signupModel.Password != signupModel.ConfirmPassword)
        {
            return;
        }

        isLoading = true;
        await Task.Delay(500);

        await Task.Delay(1500);
        Navigation.NavigateTo("/login");
        isLoading = false;
    }

    public class SignupModel
    {
        public string FullName { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
        public string ConfirmPassword { get; set; } = string.Empty;
    }
}